--swiftversion 6

# ğŸ§¼ Style
--indent 4
--wrapeffects never
--wraparguments preserve
--wrapparameters preserve
--lineaftermarks false
--anonymousforeach ignore

--commas inline
--ranges spaced
--self insert
--guardelse same-line

# ğŸ”’ Access control in extensions
--extensionacl on-declarations

# ğŸ“ Formatting rules
--stripunusedargs closure-only
--trimwhitespace always
--header ignore

# ğŸ§¾ Preserve developer intent
--disable redundantType                 # keep explicit types
--disable redundantReturn               # avoid removing return in single-line closures
--disable wrapMultilineStatementBraces  # avoid new lines

# Exlude
--exclude .build/